        app:theme="@style/DT.Toolbar"
    />

    <LinearLayout
        android:id="@id/settingsFragmentLayout" android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent">
    </LinearLayout>

</LinearLayout>